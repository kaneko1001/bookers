<div class="flash">
  <%= flash[:notice] %>
</div>

<h1 class="index-title">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', "/books/#{book.id}" %></td>
        <td><%= link_to 'Edit', "/books/#{book.id}/edit" %>
        <td><%= link_to 'Destroy', "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1 class="books-content">New book</h1>
<% if @book.errors.any? %>
  <div class="error">
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="books-content-title">Title</div>
  <div class="books-field">
    <%= f.text_field :title %>
  </div>

  <div class="books-content-title">Body</div>
  <div class="books-field">
    <%= f.text_area :body %>
  </div>

  <div class="books-submit">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
</main>
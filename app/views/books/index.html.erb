<div class="flash">
  <%= flash[:notice] %>
</div>

<h1 class="index-title">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
        <tr>
          <td class="index-content-title"><%= book.title %></td>
          <td class="index-content-title"><%= book.body %></td>
          <td class="index-rink"><%= link_to 'Show', book_path(book.id) %></td>
          <td class="index-rink"><%= link_to 'Edit', edit_book_path(book.id) %>
          <td class="index-rink"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
  <% end %>
  </tbody>
</table>

<h1 class="book-content">New book</h1>
<% if @book.errors.any? %>
  <div class="error">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="index-field-title">Title</div>
  <div class="index-field">
    <%= f.text_field :title %>
  </div>

  <div class="index-field-title">Body</div>
  <div class="index-field">
    <%= f.text_area :body %>
  </div>

  <div class="index-submit">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
</main>